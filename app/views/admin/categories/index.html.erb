<dev class="row">
  <dev class="col">
    <h1>Categories</h1>
  </dev>
  <dev class="col mt-2">
    <%= link_to '+ New Category', new_admin_category_path, class: 'btn btn-large btn-primary float-right' %>
  </dev>
</dev>

<ul class="list-group list-group-flush">
  <li class="list-group-item">
    <div class="row">
      <div class="col-10 font-weight-bold">Category name</div>
      <div class="col-2 font-weight-bold"></div>
    </div>
  </li>

  <% @categories.each do |category| %>
    <li class="list-group-item">
      <div class="row">
        <div class="col-10"><%= category.name %></div>
        <div class="col-2">
          <div class="float-right">
            <%= link_to 'Edit', edit_admin_category_path(category), class: 'btn btn-sm btn-outline-primary' %>
            <%= link_to 'Destroy', admin_category_path(category), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-outline-danger' %>
          </div>
        </div>
      </div>
    </li>
  <% end %>
</ul>